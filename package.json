{
  "name": "fcc-voting-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "babel-core": "6.14.0",
    "express": "4.13.3"
  },
  "scripts": {
    "start": "concurrently \"npm run start-client\" \"npm run api\"",
    "server": "concurrently \"npm run build-client\" \"NODE_ENV=production npm run api\"",
    "api": "node api.js",
    "start-client": "node start-client.js",
    "build-client": "node build-client.js",
    "lint": "eslint .",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "concurrently": "3.1.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  }
}